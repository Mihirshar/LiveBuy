generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  VIEWER
  INFLUENCER
  ADMIN
}

enum TripStatus {
  PLANNED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum LiveSessionStatus {
  SCHEDULED
  LIVE
  ENDED
  CANCELLED
}

enum OrderStatus {
  PENDING
  PAID
  COLLECTED
  IN_TRANSIT
  DELIVERED
  CANCELLED
  REFUNDED
  DISPUTED
}

enum PayoutStatus {
  PENDING
  RELEASED
  HELD
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?
  name          String
  avatar        String?
  bio           String?
  role          UserRole  @default(VIEWER)
  homeCountry   String?
  isVerified    Boolean   @default(false)
  kycStatus     String?   @default("pending")
  kycDocuments  Json?
  socialLinks   Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  trips         Trip[]
  liveSessions  LiveSession[]
  orders        Order[]       @relation("BuyerOrders")
  payouts       Payout[]

  @@index([email])
  @@index([role])
}

model Trip {
  id                String     @id @default(cuid())
  influencerId      String
  destinationCountry String
  destinationCity   String
  startDate         DateTime
  endDate           DateTime
  markets           Json?      // Array of market names/locations
  status            TripStatus @default(PLANNED)
  notes             String?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  // Relations
  influencer        User       @relation(fields: [influencerId], references: [id], onDelete: Cascade)
  liveSessions      LiveSession[]
  payouts           Payout[]

  @@index([influencerId])
  @@index([status])
  @@index([destinationCountry])
}

model LiveSession {
  id            String            @id @default(cuid())
  tripId        String
  influencerId  String
  title         String?
  description   String?
  scheduledAt   DateTime
  startedAt     DateTime?
  endedAt       DateTime?
  rtmpKey       String?           @unique
  streamUrl     String?
  thumbnailUrl  String?
  status        LiveSessionStatus @default(SCHEDULED)
  viewerCount   Int               @default(0)
  peakViewers   Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  // Relations
  trip          Trip              @relation(fields: [tripId], references: [id], onDelete: Cascade)
  influencer    User              @relation(fields: [influencerId], references: [id], onDelete: Cascade)
  products      Product[]
  orders        Order[]

  @@index([tripId])
  @@index([influencerId])
  @@index([status])
  @@index([scheduledAt])
}

model Product {
  id              String      @id @default(cuid())
  liveSessionId   String
  name            String
  description     String?
  priceLocal      Float
  currency        String      @default("USD")
  priceUsd        Float?
  images          Json?       // Array of image URLs
  category        String?
  culturalContext String?
  stock           Int         @default(1)
  soldCount       Int         @default(0)
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  liveSession     LiveSession @relation(fields: [liveSessionId], references: [id], onDelete: Cascade)
  orders          Order[]

  @@index([liveSessionId])
  @@index([category])
  @@index([isActive])
}

model Order {
  id              String      @id @default(cuid())
  buyerId         String
  productId       String
  liveSessionId   String
  quantity        Int         @default(1)
  pricePerUnit    Float
  totalUsd        Float
  currency        String      @default("USD")
  status          OrderStatus @default(PENDING)
  
  // Shipping info
  shippingAddress Json?
  trackingNumber  String?
  trackingInfo    Json?
  
  // Payment info
  paymentIntentId String?
  paidAt          DateTime?
  
  // Timestamps
  collectedAt     DateTime?
  shippedAt       DateTime?
  deliveredAt     DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  buyer           User        @relation("BuyerOrders", fields: [buyerId], references: [id], onDelete: Cascade)
  product         Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  liveSession     LiveSession @relation(fields: [liveSessionId], references: [id], onDelete: Cascade)

  @@index([buyerId])
  @@index([productId])
  @@index([liveSessionId])
  @@index([status])
}

model Payout {
  id            String       @id @default(cuid())
  influencerId  String
  tripId        String
  amount        Float
  currency      String       @default("USD")
  status        PayoutStatus @default(PENDING)
  releaseDate   DateTime?
  processedAt   DateTime?
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  influencer    User         @relation(fields: [influencerId], references: [id], onDelete: Cascade)
  trip          Trip         @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@index([influencerId])
  @@index([tripId])
  @@index([status])
}
